#include <bits/stdc++.h>
using namespace std;
#define ll long long int
int main()
{
    ll n,i;
    cin >> n;
    if(n>36)
        cout << "-1" << endl;
    else
    {
        if(n%2==0)
        {
            for(i=1;i<=n/2;i++)
            {
                cout << "8";
            }
            cout << endl;
        }
        else
        {

            for(i=1;i<=n/2;i++)
            {
                cout << "8";
            }
            cout << "6";
            cout << endl;
        }
    }

}
