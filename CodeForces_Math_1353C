#include<bits/stdc++.h>
#define ll long long int
using namespace std;
int main()
{
    int t;
    cin >> t;
    while(t--)
    {
        int n;
        cin >> n;
        ll sum = 0;
        for(int i=n;i>=1;i=i-2)
        {
            sum = sum + (ll)(4*i-4)*(i/2);
        }
        cout << sum << endl;;
    }
 
}
